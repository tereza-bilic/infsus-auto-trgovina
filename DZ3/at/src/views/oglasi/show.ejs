<!DOCTYPE html>
<html>
  <%- include('../components/head', {title: "Oglas - Auto trgovina" }) %>
<body class="bg-off-white">
  <%- include('../components/navigation'); %>

  <main class="container mx-auto my-10 p-4">
    <div class="bg-white rounded-lg shadow-md p-4">
      <h2 class="text-3xl font-bold mb-4">Oglas Details</h2>
      <div class="flex mb-4">
        <img src="<%= oglas.slikaUrl %>" alt="<%= oglas.naslov %>" class="w-48 h-48 object-cover rounded-md mr-4">
        <div>
          <h3 class="text-xl font-bold mb-2"><%= oglas.naslov %></h3>
          <p class="text-gray-700 mb-2">Model: <%= oglas.model %></p>
          <p class="text-gray-700 mb-2">Opis: <%= oglas.opis %></p>
          <p class="text-gray-700 mb-2">Kilometraža: <%= oglas.kilometraza %> km</p>
          <p class="text-gray-700 mb-2">Cijena: <%= oglas.cijena %> EUR</p>
          <p class="text-gray-700 mb-2">Godina Proizvodnje: <%= oglas.godinaProizvodnje %></p>
          <p class="text-gray-700 mb-2">Datum Objave: <%= oglas.datumObjave.toISOString().split('T')[0] %></p>
          <p class="text-gray-700 mb-2">Snaga (kW): <%= oglas.snagaKw %> kW</p>
        </div>
      </div>

      <h3 class="text-2xl font-bold mb-4">Edit Oglas</h3>
      <form action="/oglasi/<%= oglas.id %>?_method=PUT" method="POST" class="space-y-4">
        <div>
          <label for="naslov" class="block text-gray-700">Naslov</label>
          <input type="text" name="naslov" id="naslov" value="<%= oglas.naslov %>" class="w-full p-2 border border-gray-300 rounded-md">
        </div>
        <div>
          <label for="model" class="block text-gray-700">Model</label>
          <input type="text" name="model" id="model" value="<%= oglas.model %>" class="w-full p-2 border border-gray-300 rounded-md">
        </div>
        <div>
          <label for="opis" class="block text-gray-700">Opis</label>
          <textarea name="opis" id="opis" class="w-full p-2 border border-gray-300 rounded-md"><%= oglas.opis %></textarea>
        </div>
        <div>
          <label for="kilometraza" class="block text-gray-700">Kilometraža</label>
          <input type="number" name="kilometraza" id="kilometraza" value="<%= oglas.kilometraza %>" class="w-full p-2 border border-gray-300 rounded-md">
        </div>
        <div>
          <label for="cijena" class="block text-gray-700">Cijena</label>
          <input type="number" name="cijena" id="cijena" value="<%= oglas.cijena %>" class="w-full p-2 border border-gray-300 rounded-md">
        </div>
        <div>
          <label for="godinaProizvodnje" class="block text-gray-700">Godina Proizvodnje</label>
          <input type="number" name="godinaProizvodnje" id="godinaProizvodnje" value="<%= oglas.godinaProizvodnje %>" class="w-full p-2 border border-gray-300 rounded-md">
        </div>
        <div>
          <label for="snagaKw" class="block text-gray-700">Snaga (kW)</label>
          <input type="number" name="snagaKw" id="snagaKw" value="<%= oglas.snagaKw %>" class="w-full p-2 border border-gray-300 rounded-md">
        </div>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">Save Changes</button>
      </form>
    </div>
  </main>


  <%- include('../components/footer');  %>
</body>
</html>
