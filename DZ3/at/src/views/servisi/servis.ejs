<!DOCTYPE html>
<html>
  <%- include('../components/head', {title: "Oglasi - Auto trgovina" }) %>
<body class="bg-off-white">
  <%- include('../components/navigation'); %>

  <div class="container mx-auto my-10 p-4">
    <form action="/servis/<%= servis ? `${servis.id}?_method=PUT` : '' %>" method="POST" class="mt-4 space-y-4">
      <div class="grid grid-cols-7 gap-1 items-end justify-between">
        <div>
          <label for="datum" class="block text-grey-blue font-semibold mb-2">Datum</label>
          <input value="<%= servis?.datum?.toISOString ? servis?.datum.toISOString().split('T')[0] : servis?.datum %>" type="date" id="datum" name="datum" class="w-full px-3 py-2 border border-dark-white rounded-md" required>
        </div>
        <div>
          <label for="serviser" class="block text-grey-blue font-semibold mb-2">Serviser</label>
          <input value="<%= servis?.serviser %>" type="text" id="serviser" name="serviser" class="w-full px-3 py-2 border border-dark-white rounded-md" required>
        </div>
        <div>
          <label for="opis" class="block text-grey-blue font-semibold mb-2">Opis</label>
          <input value="<%= servis?.opis %>" type="text" id="opis" name="opis" class="w-full px-3 py-2 border border-dark-white rounded-md" required></textarea>
        </div>

        <div>
          <label for="cijena" class="block text-grey-blue font-semibold mb-2">Cijena</label>
          <input value="<%= servis?.cijena%>" type="number" id="cijena" name="cijena" class="w-full px-3 py-2 border border-dark-white rounded-md" required>
        </div>

        <div>
          <label for="trenutnaKilomentraza" class="block text-grey-blue font-semibold mb-2">Kilometraža</label>
          <input value="<%= servis?.trenutnaKilomentraza%>" type="number" id="trenutnaKilomentraza" name="trenutnaKilomentraza" class="w-full px-3 py-2 border border-dark-white rounded-md" required>
        </div>

        <input type="hidden" name="oglasId" value="<%= oglasId %>">

        <button type="submit" class="bg-blue text-white px-4 py-2 rounded-md hover:bg-dark-blue">
          Spremi
        </button>
      </div>
    </form>

    <!-- display error message-->
    <% if (error) { %>
      <div class="bg-red border text-white px-4 py-3 mt-2 rounded" role="alert">
        <strong class="font-bold">Greška!</strong>
        <span class="block"><%= error %></span>
      </div>
    <% } %>
  </div>

  <%- include('../components/footer'); %>
</body>
</html>
